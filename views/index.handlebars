<div class="container">

    <div class="row mt-3">
        <div class="col-12">
            <h1 class="text-center">BURGER TIME</h1>
            <img class="m-auto" src="/assets/img/video_game_burger.gif">
            <h2 class="mt-3">Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                    <button type="submit">Add Burger</button>
                </div>

            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
        <h2>Devour this burger!</h2>
            {{!-- <ul> --}}
                {{#each burgers}}
                {{#unless devoured}}
                {{!-- {{burgers/burger-block devoured=true}} --}}
                <div class='burger'>{{burger_name}}
                    <button class='devour' data-id='{{id}}' class="button" value='{{devoured}}'>Devour Burger!</button>
                </div>
                {{/unless}}
                {{/each}}
                {{!-- </ul> --}}
        </div>

        <div class="col-md-6">
            <h2>Burgers Devoured</h2>

            {{#each burgers}}
            {{#if devoured}}
            {{!-- {{burgers/burger-block devoured=false}} --}}
            <div class="burger">{{burger_name}}</li>
            {{/if}}
            {{/each}}

            </div>
        </div>
</div>
</div>